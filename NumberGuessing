import random

def welcome():
    print("ğŸ² Welcome to the Number Guessing Game!")
    print("I'm thinking of a number between 1 and 100.")

def get_guess():
    while True:
        try:
            guess = int(input("Enter your guess: "))
            if 1 <= guess <= 100:
                return guess
            else:
                print("âš ï¸ Please enter a number between 1 and 100.")
        except ValueError:
            print("âŒ Invalid input. Please enter a number.")

def play_game():
    number = random.randint(1, 100)
    attempts = 0

    while True:
        guess = get_guess()
        attempts += 1

        if guess < number:
            print("ğŸ”» Too low!")
        elif guess > number:
            print("ğŸ”º Too high!")
        else:
            print(f"ğŸ‰ Correct! The number was {number}.")
            print(f"You guessed it in {attempts} attempts.")
            break

def ask_replay():
    while True:
        choice = input("Do you want to play again? (yes/no): ").lower()
        if choice in ['yes', 'y']:
            return True
        elif choice in ['no', 'n']:
            return False
        else:
            print("â“ Please enter yes or no.")

def main():
    welcome()
    while True:
        play_game()
        if not ask_replay():
            print("ğŸ‘‹ Thanks for playing! Goodbye!")
            break

if __name__ == "__main__":
    main()

